# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# App URL (REQUIRED for Vercel â€“ set to your Vercel URL so magic links don't redirect to localhost)
# e.g. https://your-app.vercel.app (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Shop Location (Update with your location)
NEXT_PUBLIC_SHOP_LAT=6.2357
NEXT_PUBLIC_SHOP_LNG=80.0534
NEXT_PUBLIC_SHOP_NAME=Your Shop Name
NEXT_PUBLIC_SHOP_ADDRESS=Your Shop Address
